<% provide(:title, 'Edit Menu') %>
<div class="fixedWidth">

<div class="center">
<%= form_tag menu_path, :method => 'get' do %>
  <p>
    <label>Search Food</label>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
</div>


<h1 class="center">Edit Menu</h1>
<h2 class="center"><%= link_to "Add To Menu", new_item_path %></h2>
<h2 class="center"><%= link_to "Edit Most Recent Item", edit_path(@food) %></h2>

<ul>
  <% @foods.each do |f| %>
  <div class="foodItem">
  <li class="menuItem">
       <%= f.name %>
       <li class="menuSubItem"> <%= f.desc %> </li>
       <li class="menuPrice">  <%= f.price %> </li>
       <li class="menuGenre"> <%= f.genre %> </li>
       
  </li>
  </div>
  <% end %>
 </ul>




</div>
