<% provide(:title, 'Menu') %>
<div class="fixedWidth">

<div class="center">
<%= form_tag menu_path, :method => 'get' do %>
  <p>
    <label>Search Food</label>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
</div>


<h1 class="center">Menu</h1>
<ul>
  <% @foods.each do |f| %>
  <li>
       <%= f.name %> <%= f.price %>
       <li> <%= f.desc %> </li>
  </li>
  <% end %>
 </ul>




</div>
